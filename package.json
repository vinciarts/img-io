		"heic2any": "^0.0.4"
	},
	"devDependencies": {
		"@types/jest": "^27.0.0",
		"@typescript-eslint/eslint-plugin": "^4.0.0",
		"@typescript-eslint/parser": "^4.0.0",
		"eslint": "^7.0.0",
		"jest": "^27.0.0",
		"ts-jest": "^27.0.0",
		"typescript": "^4.0.0"
	},
